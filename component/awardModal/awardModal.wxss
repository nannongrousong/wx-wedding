.oper-btns {
  display: flex;
}

.oper-btns button {
  flex: 1;
  border: none;
  border-radius: 0;
}

.oper-btns .cancel-btn {
  border-top: 0.5rpx solid #E6E6E6;
}

.oper-btns .ok-btn {
  border-top: 0.5rpx solid #E6E6E6;
  border-left: 0.5rpx solid #E6E6E6;
  color: #3CC81E;
}
