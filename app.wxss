/**app.wxss**/
@import "/style/font-awesome.wxss";


.container {
  height: 100%;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.bottom-toolbar {
  position: fixed;
  bottom: 0;
  padding: 10rpx 0 15rpx 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.btn {
  padding: 10rpx;
  border-radius: 15rpx;
  flex: 1;
  text-align: center;
  margin: 0 10rpx;
  color: white;
}

.btn .fa {
  margin-right: 8rpx;
}
