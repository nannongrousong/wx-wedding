.lottery-tray {
  position: relative;
  margin: 0 auto;
  width: 90%;
  height: 0;
  margin-top: 100px;
  padding: 0% 0 90%;
}

.lottery-circle-big {
  position: absolute;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  border: 10px solid #e63c28;
  background: #ffce43;
  box-shadow: 0 0 5px #888;
  border-radius: 50%;
  box-sizing: border-box;
  transform-origin: 50% 50%;
}

.lottery-circle-small {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -10%;
  margin-top: -10%;
  width: 20%;
  height: 20%;
  border-radius: 50%;
  background: #e63c28;
  border: 1px solid #b6321c;
  box-shadow: 0 0 10px #888;
  text-align: center;
  vertical-align: middle;
  color: whitesmoke;
  z-index: 1;
}

.lottery-square {
  position: relative;
  left: 50%;
  top: -10%;
  width: 40%;
  height: 40%;
  margin-left: -20%;
  margin-top: -20%;
  background: #e63c28;
  border: 1px solid #b6321c;
  box-shadow: 0 0 10px #888;
  transform: rotate(45deg);
}

.award-icon {
  display: block;
  margin-top: 20%;
  margin-bottom: 10px;
}

.award-describe {
  display: block;
}

.tray-line {
  position: absolute;
  top: 0;
  left: 50%;
  width: 5px;
  height: 50%;
  background: red;
  transform-origin: 0 100%;
}

.tray-award {
  position: absolute;
  top: 0;
  left: 50%;
  width: 20%;
  margin-left: -10%;
  height: 50%;
  text-align: center;
  color: #e63c28;
  transform-origin: 50% 100%;
}

.btn-back {
  color: #454545;
  background-color: #f7f7f7;
}
