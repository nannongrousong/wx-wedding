/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.main-background {
  z-index: -1;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
  background-attachment: fixed;
  background-color: #ccc;
  background-image: url('https://nannongrousong-app-private.oss-cn-shanghai.aliyuncs.com/wedding/app.jpg');
}

.btn-lottery {
  background: #ff9800;
}

.btn-sign {
  background: #f44336;
}

.btn-wish {
  background: #2196f3;
}

.btn-map {
  background: #4caf50;
}
